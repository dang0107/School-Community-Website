@model Assignment1.Models.ViewModels.EditMembershipsModel

@{
    ViewData["Title"] = "Edit Memberships";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Edit</h1>
<div>
    <h4>Student</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Full Name
        </dt>
        <dd class="col-sm-10">
            @Model.Students.First().FullName
        </dd>
    </dl>
    <hr />
</div>
<div class="row">
    <div class="col-md-4">
        <table class="table table-dark borderless">
            <tbody>
                @foreach (var item in Model.UnregisteredCommunities)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            <a class="btn btn-secondary" style="width: 100px" asp-action="AddMemberships" asp-route-studentId=@Model.Students.First().ID asp-route-communityId=@item.ID>Register</a>
                        </td>
                    </tr>
                }
                @foreach (var item in Model.RegisteredCommunities)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            <a class="btn btn-secondary overlay" style="width: 100px" asp-action="RemoveMemberships" asp-route-studentId=@Model.Students.First().ID asp-route-communityId=@item.ID>Unregister</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <a class="btn btn-secondary mt-2" asp-action="Index">Back to List</a>
    </div>
</div>