<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - School Community</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;900&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
</head>
<body class="bg-dark text-light">
    <style>
        .card {
            box-shadow: 0 0 10px 0 rgba(100, 100, 100, 0.26);
        }
    </style>
    <header>
        <div class="bs-component">
            <nav id="nav" class="navbar navbar-expand-lg navbar-dark bg-dark box-shadow">
                <div class="m-1">
                    <a class="navbar-brand btn" asp-controller="Home" asp-action="Index">SCHOOL COMMUNITY</a>
                    <div class="btn-group mr-2" role="group">
                        <a class="btn btn-primary @(ViewContext.RouteData.Values["controller"].ToString() == "Home" ? "" : "overlay")" asp-controller="Home" asp-action="Index">Home</a>
                        <a class="btn btn-success @(ViewContext.RouteData.Values["controller"].ToString() == "Students" ? "" : "overlay")" asp-controller="Students" asp-action="Index">Students</a>
                        <a class="btn btn-danger @(ViewContext.RouteData.Values["controller"].ToString() == "Communities"||ViewContext.RouteData.Values["controller"].ToString() == "Advertisements" ? "" : "overlay")" asp-controller="Communities" asp-action="Index">Communities</a>
                    </div>
                </div>
            </nav>
        </div>
    </header>
    <div class="container bg-dark">
        <main role="main" class="pb-3 m-5">
            @RenderBody()
        </main>
    </div>


    @RenderSection("Scripts", required: false)
</body>
</html>
