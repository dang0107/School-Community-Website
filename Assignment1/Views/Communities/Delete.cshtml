@model Assignment1.Models.ViewModels.ViewModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var community = Model.Communities.First();
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Community</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => community.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => community.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => community.Budget)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => community.Budget)
        </dd>
    </dl>
    @if (Model.Advertisements.Count() == 0)
    {
        <form asp-action="Delete">
            <div class="btn-group mt-2" role="group">
                <input class="btn btn-danger" type="submit" value="Delete" />
                <a class="btn btn-danger" asp-action="Index">Back to List</a>
            </div>
        </form>
    }
    else
    {
        <div class="text-danger">You cannot delete a community untill all associated advertisements are deleted</div>
        <a class="btn btn-secondary mt-2" asp-action="Index">Back to List</a>
    }
</div>
