@model Assignment1.Models.ViewModels.ViewModel

@{
    ViewData["Title"] = "Delete - Student Community";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var community = Model.Communities.First();
    var ads = Model.Advertisements.First();
}

<h1>Delete ad for community @community.Title</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => ads.FileName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => ads.FileName)
        </dd>
        <dt class="col-sm-2">
            Image
        </dt>
        <dd class="col-sm-10">
            <img src="@ads.Url" style="max-width: 400px;" />
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed" asp-route-id="@ads.AdsId">
        <div class="btn-group mt-2" role="group">
            <input class="btn btn-danger" type="submit" value="Delete"/>
            <a class="btn btn-secondary" asp-action="Index" asp-route-id="@community.ID">Back to List</a>
        </div>
    </form>
</div>

